# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	status_command i3blocks -c ~/.config/i3blocks/i3blocks.conf
		font pango:Roboto Mono 9, FontAwesome 9
		position bottom
		separator_symbol "⎤⎩"
		strip_workspace_numbers yes
		colors {
			statusline         #bdc3c7
				background         $black
				separator          $grey

#                                                  BORDER       BACKGROUND   TEXT
				focused_workspace  $black       $black       $border
				inactive_workspace $black       $black       $grey
				active_workspace   $black       $black       $grey
				urgent_workspace   $black       $black       $red
				binding_mode       $black       $black       $grey
		}
}
