# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize"{
# These bindings trigger as soon as you enter the resize mode

# Pressing left will shrink the window’s width.
# Pressing right will grow the window’s width.
# Pressing up will shrink the window’s height.
# Pressing down will grow the window’s height.
		bindsym j resize shrink width 10 px or 1 ppt
		bindsym k resize grow height 10 px or 1 ppt
		bindsym l resize shrink height 10 px or 1 ppt
		bindsym semicolon resize grow width 10 px or 1 ppt

# same bindings, but for the arrow keys
		bindsym Left resize shrink width 20 px or 5 ppt
		bindsym Down resize grow height 20 px or 5 ppt
		bindsym Up resize shrink height 20 px or 5 ppt
		bindsym Right resize grow width 20 px or 5 ppt

# back to normal: Enter or Escape
		bindsym Return mode "default"
		bindsym Escape mode "default"
}
# Power control mode
set $power_control "[l]ock log[o]ut [s]uspend [h]ibernate [r]eboot [p]oweroff"
mode  $power_control {
	bindsym l exec dm-tool switch-to-greeter; mode "default"
		bindsym o exec i3-msg exit; mode "default"
		bindsym s exec ~/.i3/i3lock && systemctl suspend; mode "default"
		bindsym h exec systemctl hibernate; mode "default"
		bindsym r exec systemctl reboot; mode "default"
		bindsym p exec systemctl poweroff; mode "default"

		bindsym Return mode "default"
		bindsym Escape mode "default"
}

#Program launcher mode
set $launcher "[f]irefox [e]macs [t]hunar"
mode $launcher {
	bindsym f exec firefox; mode "default"
		bindsym e exec emacsclient -c; mode "default"
		bindsym t exec thunar; mode "default"

		bindsym Return mode "default"
		bindsym Escape mode "default"
}
